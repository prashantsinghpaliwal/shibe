<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Semibold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Light">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="ExtraLight">
        <item name="android:fontFamily">@font/poppins_extralight</item>
    </style>

    <style name="Title1.Bold" parent="Bold">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Title1.Bold.Monetization" parent="Bold">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Title1.ExtraLight" parent="ExtraLight">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Body1.Bold" parent="Bold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Body1.Light" parent="Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="Body2.Light" parent="Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="Body1.Medium" parent="Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="Body2.Semibold" parent="Semibold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Body3.Medium" parent="Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Title2.Bold" parent="Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="InputBox.Light" parent="Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


